<div class="container">
<div class="row">
<div class="col-md-3">
<div class="col-md-8 offset-md-1">
  <h1>Editing Book</h1>
  
  <%= form_with model: @book do |f| %>
  <div>
    <h4>Title</h4>
  
    <%= f.text_field :title %>
  
    <h4>Body</h4>
    <%= f.text_area :body %>
  
  <%#= link_to "/book", show_book_path(@book.id) %>
  <%= link_to 'Show', book_path(@book.id) %> |
   <%= link_to 'Back', books_path %>
       </div>
      <%= f.submit %>
  <% end %>
  
  <%= flash[:notice] %>
  
   <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>
</div>
</div>
</div>